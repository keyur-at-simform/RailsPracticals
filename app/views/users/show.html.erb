<h1 class="text-center mt-4"><%= @user.username %>'s Profile</h1>

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card p-3 py-4 shadow-lg p-3 mb-5 bg-white rounded">
                <div class="text-center"> <img src="https://i.imgur.com/bDLhJiP.jpg" width="100" class="rounded-circle"> </div>
                <div class="text-center mt-3"> 
                    <h5 class="mt-2 mb-0"><%= @user.username %></h5> <span><%= @user.email %></span>
                    <div class="px-4 mt-1">
                    </div>
                    
                    <%= link_to "Edit Profile", edit_user_path, class:"btn btn-primary" %> </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h1 class="text-center mt-4">Events Created by <%= @user.username %></h1>
