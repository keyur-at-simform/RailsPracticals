<%# List employees having age > 20 and < 40  %>
<div class="container">
  <h1>(5)Employees having age more than 20 and less than 40</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>No. of Orders</th>
        <th>Full time Availability</th>
        <th>Salary</th>
      </tr>
    </thead>
    <tbody>
      <% Employee.where("age > 20").where("age < 40").each do |employee| %>
      <tr>
        <td><%= employee.firstname + " " + employee.lastname%></td>
        <td><%= employee.email%></td>
        <td><%= employee.age%></td>
        <td><%= employee.no_of_order%></td>
        <td><%= employee.full_time_available%></td>
        <td><%= employee.salary%></td>
      </tr>
      <% end%>
    </tbody>
  </table><br><br>

