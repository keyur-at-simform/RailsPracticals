<div class="container">
  <h1>Our Employees</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>No. of Orders</th>
        <th>Full time Availability</th>
        <th>Salary</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee|%>
      <tr>
        <td><%= employee.firstname + " " + employee.lastname%></td>
        <td><%= employee.email%></td>
        <td><%= employee.age%></td>
        <td><%= employee.no_of_order%></td>
        <td><%= employee.full_time_available%></td>
        <td><%= employee.salary%></td>
        <td><%= link_to "Show", employee_path(employee)%></td>
        <td><%= link_to "Edit", edit_employee_path(employee)%></td>
        <td><%= button_to "Delete", employee_path(employee), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-secondary"%></td>
      </tr>
      <% end%>
    </tbody>
  </table>

  <p><%= link_to "Add new Employee", new_employee_path, class:"btn btn-primary" %></p>
</div><br><br>


<table>
  <th>Search Employee:</th>
  <th>Search</th>

  <%= form_tag employees_path, method: :get do %>

  <tr>
  <td><%= email_field_tag :search, params[:search] %></td>
  <td><%= submit_tag "search" %></td>
  <% end %>
  </tr>

</table>


  