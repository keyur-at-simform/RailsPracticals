    <%= link_to "Edit", edit_employee_path(@employee), class:"btn btn-primary" %> <br> <br>
    <%= button_to "Delete", employee_path(@employee), class:"btn btn-secondary" ,method: :delete, data: {confirm: "Are you sure?"} %> <br>
    <%= link_to "Return to Employee Listing", employees_path, class:"btn btn-info" %>
  </div>

</div>

