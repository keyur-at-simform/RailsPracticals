<div class="container">
  <h1>UpdateProduct</h1>

  <% if @productn.errors.any? %>
    <h2> The following error(s) prevented the Book from being saved </h2>
    <ul>
      <% @productn.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @productn,local: true) do |f| %>   
    
    <div class="field form-group">
      <%= f.text_field :name, class:"form-control", placeholder:"Enter Name"%>
    </div><br>

    <div class="field form-group">
      <%= f.number_field :rate, class:"form-control", placeholder:"Enter Price"%>
    </div><br>

    <div class="action">
      <%= f.submit class:"btn btn-primary" %>
    </div><br>
      
  <% end %>

  <%= link_to "Return to Products Listing", productns_path, class:"btn btn-info" %>
