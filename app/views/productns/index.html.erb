<div class="container">
<br>

  <%# list all products %>
  <h1>Products List</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rate</th>
      </tr>
    </thead>
    <tbody>
      <% @productns.each do |product|%>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.rate%></td>
        <td><%= link_to "Show", productn_path(product), class:"btn btn-primary"%></td>
        <td><%= link_to "Edit", edit_productn_path(product), class:"btn btn-secondary"%></td>
        <td><%= button_to "Delete", productn_path(product), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }%></td> 
      </tr>
      <% end%>
    </tbody>
  </table>

  <p><%= link_to "Add new Product", new_productn_path, class:"btn btn-primary" %></p>
</div>
  