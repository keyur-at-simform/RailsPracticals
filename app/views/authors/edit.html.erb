<h1>Edit Author</h1>

<% if @author.errors.any? %>
	<h2> The following error(s) prevented the author from being saved </h2>
	<ul>
		<% @author.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @author,local: true) do |f| %> 
	
	<p>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</p>

	<p>
		<%= f.label :last_name %>
		<%= f.text_field :last_name	 %>
	</p>

	<p>
		<%= f.label :dob %>
		<%= f.date_select :dob %>
	</p>

	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.submit %>
	</p>
    
<% end %>

<%= link_to "Retrun to Author Listing", authors_path %>

