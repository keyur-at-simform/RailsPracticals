<div class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= @product.title %></h1>
    <h2 class="lead"><%= @product.capacity %></h2>
    <p class="lead">$  <%= @product.price %> </p>

    <hr class="my-4">
  
    <p class="lead"> <%= @product.description %></p>
    <p class="lead"> Order Active ?  <%= @product.is_active %></p>
    <p class="lead">Order Status:   <%= @product.status %></p>

    <%= link_to "Edit", edit_product_path(@product), class:"btn btn-primary" %> <br> <br>
    <%= button_to "Delete", product_path(@product), class:"btn btn-secondary" ,method: :delete, data: {confirm: "Are you sure?"} %> <br>
    <%= link_to "Return to Product Listing", products_path, class:"btn btn-info" %>
  </div>
</div>
