    <div class="field" "form-group">
      <%= form.text_field :productprice, class:"form-control", placeholder:"Product Price"  %>
    </div>

    <div class="field" "form-group">
      <%= form.text_field :discount, class:"form-control", placeholder:"Discount Rate"  %>
    </div>

    <br>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
