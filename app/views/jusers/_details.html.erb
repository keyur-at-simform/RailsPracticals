<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li style="color:red;"><%= error %></li>
    <% end %>
  </ul>
<% end %>
<li style="color:green;"><%= notice %></li>
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= @user.first_name + " " + @user.last_name %></h1>
    <h2 class="lead"><%= @user.email %></h2>
    <h2 class="lead">Password:<%= @user.password %></h2>
    <p class="lead">Subscribed:<%= @user.subscription %></p>
    <p class="lead">Subscription Mail:<%= @user.subscription_email %></p>
    <hr class="my-4">
  </div>
</div>
