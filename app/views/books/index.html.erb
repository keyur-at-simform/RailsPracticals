<div class="container">
  <h1>Books Available</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book|%>
      <tr>
        <td><%= book.name%></td>
        <td><%= book.price%></td>
        <td><%= link_to "Show", book_path(book)%></td>
        <td><%= link_to "Edit", edit_book_path(book)%></td>
        <td><%= button_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-secondary"%></td>
      </tr>
      <% end%>
    </tbody>
  </table>

  <p><%= link_to "Add new Book", new_book_path, class:"btn btn-primary" %></p>
</div>
  