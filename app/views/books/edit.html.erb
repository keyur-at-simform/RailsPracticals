<div class="container">
  <h1>Edit Author</h1>

  <% if @book.errors.any? %>
    <h2> The following error(s) prevented the Book from being saved </h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @book,local: true) do |f| %> 
    
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :price %>
      <%= f.number_field :price	 %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    
  <% end %>

