<div class="container">
<br>

  <h1>Orders List</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @orderns.each do |order|%>
      <tr>
        <td><%= order.productn.name %></td>
        <td><%= order.quantity%></td>
      </tr>
      <% end%>
    </tbody>
  </table>

  <p><%= link_to "Add new Order", new_ordern_path, class:"btn btn-primary" %></p>
</div>
  