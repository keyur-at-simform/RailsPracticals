<div class="container">
  <h1>Create a new Order</h1>

  <%# print errors %>
  <% if @ordern.errors.any? %>
    <h2> The following error(s) prevented the Book from being saved </h2>
    <ul>
      <% @ordern.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>
 
  <%# form for editing product %>
  <%= form_with(model: [@productn, @ordern]) do |f| %>
    
    <div class="field form-group">
      <%= f.hidden_field :productn_id, value: @productn.id %>
    </div><br>
    
    <div class="field form-group">
      <%= f.number_field :quantity, class:"form-control", placeholder:"Enter Quantity"%>
    </div><br>

    <div class="action">
      <%= f.submit class:"btn btn-primary" %>
    </div><br>
      
  <% end %>

