<div class="container">
  <h1>Events List</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event|%>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description%></td>
        <td><%= event.event_date%></td>
        <td><%= link_to "Show", event_path(event)%></td>
        <td><%= link_to "Edit", edit_event_path(event)%></td>
        <td><%= button_to "Delete", event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-secondary"%></td>
      </tr>
      <% end%>
    </tbody>
  </table>

  <p><%= link_to "Add new event", new_event_path, class:"btn btn-primary" %></p>
</div>
  