<div class="container">
  <h1>Create a new Event</h1>

  <% if @event.errors.any? %>
    <h2> The following error(s) prevented the Book from being saved </h2>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @event, local: true) do |f| %> 
    
    <div class="field form-group">
      <%= f.text_field :name, class:"form-control", placeholder:"Enter Event Name"%>
    </div><br>

    <div class="field form-group">
      <%= f.text_field :description, class:"form-control", placeholder:"Enter Event Description"%>
    </div><br>
 
    <div class="field form-group">
      <%= f.label :Date_of_Birth%>
      <%= f.date_select :f_dob, :start_year=>1900, class:"form-control", placeholder:"Date of Birth"%>
    </div><br>

    <div class="action">
      <%= f.submit class:"btn btn-primary" %>
    </div><br>
      
  <% end %>

  <%= link_to "Return to Event Listing", events_path, class:"btn btn-info" %>
<div>
