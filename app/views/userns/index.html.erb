<div class="container">
<br>

  <%# list all products %>
  <h1>Users List</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Picture</th>
      </tr>
    </thead>
    <tbody>
      <% @userns.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag(user.picture.url) %></td>
        <td><%= link_to "Show", usern_path(user), class:"btn btn-primary"%></td>
        <td><%= link_to "Edit", edit_usern_path(user), class:"btn btn-secondary"%></td>
        <td><%= button_to "Delete", usern_path(user), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }%></td> 
      </tr>
      <% end%>
    </tbody>
  </table>

    <p><%= link_to "Add new Employee", new_usern_path, class:"btn btn-primary" %></p>
</div>
  